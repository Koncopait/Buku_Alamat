<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aureliafriska.FragmentBuku">
    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_Nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColorHint="@color/text_color"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/et_Nama"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/linearLayout5"
                android:layout_alignLeft="@+id/luas"
                android:layout_alignRight="@+id/linearLayout5"
                android:layout_alignStart="@+id/luas"
                android:layout_below="@+id/linearLayout5"
                android:layout_marginTop="19dp"
                android:ems="10"
                android:hint="Masukkan Nama"
                android:inputType="text"
                android:textColor="#094c53"
                android:textColorHint="@color/text_color" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:textColorHint="@color/text_color"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_Nama"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp">

            <EditText
                android:id="@+id/et_Email"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/linearLayout5"
                android:layout_alignLeft="@+id/luas"
                android:layout_alignRight="@+id/linearLayout5"
                android:layout_alignStart="@+id/luas"
                android:layout_below="@+id/linearLayout5"
                android:layout_marginTop="19dp"
                android:ems="10"
                android:hint="Masukkan Email"
                android:inputType="textEmailAddress"
                android:textColor="#094c53"
                android:textColorHint="@color/text_color" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_noHp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:textColorHint="@color/text_color"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_Email"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp">

            <EditText
                android:id="@+id/et_noHp"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/linearLayout5"
                android:layout_alignLeft="@+id/luas"
                android:layout_alignRight="@+id/linearLayout5"
                android:layout_alignStart="@+id/luas"
                android:layout_below="@+id/linearLayout5"
                android:layout_marginTop="19dp"
                android:ems="10"
                android:hint="Masukkan No Hp"
                android:inputType="number"
                android:textColor="#094c53"
                android:textColorHint="@color/text_color" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_Instansi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:textColorHint="@color/text_color"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_noHp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp">

            <EditText
                android:id="@+id/et_Instansi"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/linearLayout5"
                android:layout_alignLeft="@+id/luas"
                android:layout_alignRight="@+id/linearLayout5"
                android:layout_alignStart="@+id/luas"
                android:layout_below="@+id/linearLayout5"
                android:layout_marginTop="19dp"
                android:ems="10"
                android:hint="Masukkan Asal Instansi"
                android:inputType="text"
                android:textColor="#094c53"
                android:textColorHint="@color/text_color" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_AlamatIns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:textColorHint="@color/text_color"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_Instansi"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp">

            <EditText
                android:id="@+id/et_AlamatIns"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/linearLayout5"
                android:layout_alignLeft="@+id/luas"
                android:layout_alignRight="@+id/linearLayout5"
                android:layout_alignStart="@+id/luas"
                android:layout_below="@+id/linearLayout5"
                android:layout_marginTop="19dp"
                android:ems="10"
                android:hint="Masukkan Alamat Instansi"
                android:inputType="text"
                android:textColor="#094c53"
                android:textColorHint="@color/text_color" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_NoTelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:textColorHint="@color/text_color"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_AlamatIns"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp">

            <EditText
                android:id="@+id/et_NoTelp"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/linearLayout5"
                android:layout_alignLeft="@+id/luas"
                android:layout_alignRight="@+id/linearLayout5"
                android:layout_alignStart="@+id/luas"
                android:layout_below="@+id/linearLayout5"
                android:layout_marginTop="19dp"
                android:ems="10"
                android:hint="Masukkan No Telepon"
                android:inputType="number"
                android:textColor="#094c53"
                android:textColorHint="@color/text_color" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_Fax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:textColorHint="@color/text_color"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_NoTelp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp">

            <EditText
                android:id="@+id/et_Fax"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/linearLayout5"
                android:layout_alignLeft="@+id/luas"
                android:layout_alignRight="@+id/linearLayout5"
                android:layout_alignStart="@+id/luas"
                android:layout_below="@+id/linearLayout5"
                android:layout_marginTop="19dp"
                android:ems="10"
                android:hint="Masukkan Nomor Fax"
                android:inputType="number"
                android:textColor="#094c53"
                android:textColorHint="@color/text_color" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_simpan"
            android:layout_width="216dp"
            android:layout_height="30dp"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="8dp"
            android:background="#379ee9"
            android:text="Simpan"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_Fax"
            app:layout_constraintVertical_bias="0.0" />
            // the views here that you want to make scrollable


    </android.support.constraint.ConstraintLayout>
    </ScrollView>
</FrameLayout>
